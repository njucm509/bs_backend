<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.njucm.wp.bs.data.mapper.FieldMapper">
    <sql id="field">fields</sql>
    <sql id="userField">user_field</sql>
    <sql id="roleField">role_field</sql>

    <resultMap id="baseMap" type="Field">
        <result column="user_id" property="userId"/>
        <result column="type_id" property="typeId"/>
        <result column="sys_name" property="sysName"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>
    
    <resultMap id="count" type="java.util.Map">
        <result column="count" property="count" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="check" resultMap="count">
        SELECT count(id) as count FROM
        <include refid="field"/>
        WHERE (sys_name = #{sysName} OR name = #{name})
        <if test="id != null">
            and id != #{id}
        </if>
    </select>

    <select id="getFieldIdByRoleIds" resultType="java.lang.Integer">
        select field_id from
        <include refid="roleField"/>
        where role_id in
        <foreach collection="roleIds" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>

    <select id="getFieldByIds" resultType="Field" resultMap="baseMap">
        select * from
        <include refid="field"/>
        where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>

    <select id="createTable">
        create table ${table}
        <foreach collection="cols" item="col" separator="," open="(" close=")">
            ${col}
        </foreach>
    </select>

    <update id="updateTableScheme">

    </update>

    <delete id="drop">
        drop table if exists ${table}
    </delete>
</mapper>
